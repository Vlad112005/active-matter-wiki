generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// === ПОЛЬЗОВАТЕЛИ И ПРОФИЛИ ===
model User {
  id            String         @id @default(cuid())
  username      String         @unique
  email         String         @unique
  password      String         // Зашифрован bcrypt
  avatar        String?
  bio           String?        @db.Text
  discordId     String?        @unique
  isPremium     Boolean        @default(false)
  premiumUntil  DateTime?
  emailVerified Boolean        @default(false)
  isActive      Boolean        @default(true)
  lastLoginAt   DateTime?
  loginCount    Int            @default(0)
  language      String         @default("ru") // 'ru' или 'en'
  timezone      String         @default("Europe/Moscow")
  notifications Json           @default("{\"email\": true, \"browser\": true}")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  
  roleId        String?
  role          Role?          @relation(fields: [roleId], references: [id])
  
  profile       UserProfile?
  guides        Guide[]
  comments      Comment[]
  favorites     Favorite[]
  bookmarks     Bookmark[]
  searches      SearchHistory[]
  sessions      UserSession[]
  activityLogs  ActivityLog[]
  consents      UserConsent[]
  
  @@index([email])
  @@index([username])
  @@index([roleId])
  @@index([isActive])
  @@map("users")
}

model UserProfile {
  id                 String   @id @default(cuid())
  userId             String   @unique
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Профиль игрока
  gameNickname       String?
  gameLevel          Int      @default(1)
  favoriteClass      String?
  playtime           Int      @default(0) // в минутах
  achievements       String[]
  
  // Статистика активности на сайте
  guideViews         Int      @default(0)
  guideLikes         Int      @default(0)
  commentsCount      Int      @default(0)
  favoritesCount     Int      @default(0)
  reputation         Int      @default(0)
  
  // Социальные сети
  twitchUrl          String?
  youtubeUrl         String?
  vkUrl              String?
  steamId            String?
  
  // Настройки приватности
  showEmail          Boolean  @default(false)
  showDiscord        Boolean  @default(false)
  showActivity       Boolean  @default(true)
  showStats          Boolean  @default(true)
  
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  
  @@index([userId])
  @@map("user_profiles")
}

model Role {
  id          String   @id @default(cuid())
  name        String   @unique  // 'founder', 'admin', 'moderator', 'content_manager', 'user'
  displayName String
  description String?  @db.Text
  permissions Json     @default("{}") // Детальные права доступа
  priority    Int      @default(0)  // Чем выше, тем больше прав
  color       String?  // Цвет роли для отображения
  badge       String?  // Иконка/бейдж роли
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  users       User[]
  
  @@index([name])
  @@index([priority])
  @@map("roles")
}

// === ПРЕДМЕТЫ ===
model Item {
  id                 String            @id @default(cuid())
  name               String            @unique
  nameEn             String?
  description        String            @db.Text
  descriptionEn      String?           @db.Text
  image              String?
  type               String
  rarity             String
  price              Int               @default(0)
  crystalPrice       Int               @default(0)
  replicationPoints  Int               @default(0)
  monolithLevel      String?
  weight             Float             @default(0)
  stackable          Boolean           @default(false)
  maxStack           Int               @default(1)
  source             String[]
  sourceEn           String[]
  tags               String[]
  isQuestItem        Boolean           @default(false)
  damage             Int               @default(0)
  armor              Int               @default(0)
  durability         Int               @default(0)
  viewCount          Int               @default(0)
  searchCount        Int               @default(0) // Количество поисков
  isPublished        Boolean           @default(true)
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  
  monolithUnlocks    MonolithUnlock[]
  favorites          Favorite[]
  bookmarks          Bookmark[]
  
  @@index([type])
  @@index([rarity])
  @@index([monolithLevel])
  @@index([isPublished])
  @@index([name])
  @@index([searchCount])
  @@fulltext([name, description])
  @@map("items")
}

// === МОНОЛИТ ===
model MonolithLevel {
  id                 String           @id @default(cuid())
  code               String           @unique
  order              Int              @unique
  name               String
  nameEn             String?
  requiredTokens     Int?
  requiredCrystals   Int?
  description        String?          @db.Text
  descriptionEn      String?          @db.Text
  isPublished        Boolean          @default(true)
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  
  unlocks            MonolithUnlock[]
  
  @@index([order])
  @@index([code])
  @@map("monolith_levels")
}

model MonolithUnlock {
  id              String         @id @default(cuid())
  monolithLevelId String
  monolithLevel   MonolithLevel  @relation(fields: [monolithLevelId], references: [id], onDelete: Cascade)
  type            String
  itemId          String?
  item            Item?          @relation(fields: [itemId], references: [id], onDelete: Cascade)
  upgradeName     String?
  upgradeNameEn   String?
  upgradeCost     Int?
  recipeName      String?
  recipeNameEn    String?
  chronoName      String?
  chronoNameEn    String?
  isLocked        Boolean        @default(false)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  
  @@index([monolithLevelId])
  @@index([itemId])
  @@index([type])
  @@map("monolith_unlocks")
}

// === ЛОКАЦИИ ===
model Location {
  id          String     @id @default(cuid())
  name        String     @unique
  nameEn      String?
  description String     @db.Text
  image       String?
  dangerLevel String
  lootTable   String[]
  tips        String[]
  viewCount   Int        @default(0)
  searchCount Int        @default(0) // Количество поисков
  isPublished Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  favorites   Favorite[]
  bookmarks   Bookmark[]
  
  @@index([name])
  @@index([dangerLevel])
  @@index([isPublished])
  @@index([searchCount])
  @@fulltext([name, description])
  @@map("locations")
}

// === ГАЙДЫ ===
model Guide {
  id          String    @id @default(cuid())
  title       String
  titleEn     String?
  slug        String    @unique
  content     String    @db.Text
  contentEn   String?   @db.Text
  coverImage  String?
  category    String?
  tags        String[]
  authorId    String
  author      User      @relation(fields: [authorId], references: [id])
  published   Boolean   @default(false)
  views       Int       @default(0)
  rating      Int       @default(0)
  likes       Int       @default(0)
  searchCount Int       @default(0) // Количество поисков
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?
  
  comments    Comment[]
  favorites   Favorite[]
  bookmarks   Bookmark[]
  versions    GuideVersion[]
  
  @@index([authorId])
  @@index([published])
  @@index([slug])
  @@index([category])
  @@index([searchCount])
  @@fulltext([title, content])
  @@map("guides")
}

model GuideVersion {
  id        String   @id @default(cuid())
  guideId   String
  guide     Guide    @relation(fields: [guideId], references: [id], onDelete: Cascade)
  version   Int
  title     String
  content   String   @db.Text
  changedBy String
  changes   String?  @db.Text
  createdAt DateTime @default(now())
  
  @@index([guideId])
  @@index([version])
  @@map("guide_versions")
}

model Comment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  guideId   String
  guide     Guide    @relation(fields: [guideId], references: [id], onDelete: Cascade)
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  rating    Int      @default(0)
  isEdited  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([guideId])
  @@index([authorId])
  @@map("comments")
}

// === ИЗБРАННОЕ (быстрый доступ для незарегистрированных) ===
model Favorite {
  id         String    @id @default(cuid())
  userId     String
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  itemId     String?
  item       Item?     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  
  guideId    String?
  guide      Guide?    @relation(fields: [guideId], references: [id], onDelete: Cascade)
  
  locationId String?
  location   Location? @relation(fields: [locationId], references: [id], onDelete: Cascade)
  
  type       String    // 'item', 'guide', 'location'
  createdAt  DateTime  @default(now())
  
  @@unique([userId, itemId])
  @@unique([userId, guideId])
  @@unique([userId, locationId])
  @@index([userId])
  @@index([type])
  @@map("favorites")
}

// === ЗАКЛАДКИ (организованные коллекции для зарегистрированных) ===
model Bookmark {
  id           String    @id @default(cuid())
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  itemId       String?
  item         Item?     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  
  guideId      String?
  guide        Guide?    @relation(fields: [guideId], references: [id], onDelete: Cascade)
  
  locationId   String?
  location     Location? @relation(fields: [locationId], references: [id], onDelete: Cascade)
  
  type         String    // 'item', 'guide', 'location'
  collectionId String?
  collection   BookmarkCollection? @relation(fields: [collectionId], references: [id], onDelete: SetNull)
  
  note         String?   @db.Text  // Личная заметка пользователя
  tags         String[]  // Персональные теги
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  @@unique([userId, itemId])
  @@unique([userId, guideId])
  @@unique([userId, locationId])
  @@index([userId])
  @@index([collectionId])
  @@index([type])
  @@map("bookmarks")
}

model BookmarkCollection {
  id          String     @id @default(cuid())
  userId      String
  name        String
  description String?    @db.Text
  icon        String?
  color       String?    @default("#4F46E5")
  isPublic    Boolean    @default(false)
  order       Int        @default(0)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  bookmarks   Bookmark[]
  
  @@unique([userId, name])
  @@index([userId])
  @@index([isPublic])
  @@map("bookmark_collections")
}

// === ИСТОРИЯ ПОИСКА ===
model SearchHistory {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  query     String
  filters   Json?    // Сохранённые фильтры поиска
  results   Int      @default(0)  // Количество найденных результатов
  category  String?  // 'items', 'guides', 'locations', 'all'
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([query])
  @@index([createdAt])
  @@map("search_history")
}

// === ПАТЧИ ===
model Patch {
  id          String   @id @default(cuid())
  version     String   @unique
  title       String
  titleEn     String?
  content     String   @db.Text
  contentEn   String?  @db.Text
  type        String[] // ['new', 'changed', 'fixed', 'removed']
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([publishedAt])
  @@index([published])
  @@index([version])
  @@map("patches")
}

// === НАСТРОЙКИ САЙТА ===
model SiteSettings {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String   @db.Text
  category    String   // 'general', 'seo', 'analytics', 'legal', 'social', 'footer'
  description String?  @db.Text
  accessLevel String   @default("admin") // 'founder', 'admin', 'moderator'
  isPublic    Boolean  @default(false) // Доступно ли через публичный API
  updatedAt   DateTime @updatedAt
  updatedBy   String?
  
  @@index([key])
  @@index([category])
  @@index([accessLevel])
  @@index([isPublic])
  @@map("site_settings")
}

// === ЮРИДИЧЕСКИЕ ДОКУМЕНТЫ (полное соответствие законам РФ) ===
model LegalDocument {
  id          String   @id @default(cuid())
  type        String   @unique // 'terms', 'privacy', 'cookies', 'gdpr', 'user_agreement'
  title       String
  titleEn     String?
  content     String   @db.Text
  contentEn   String?  @db.Text
  version     String
  published   Boolean  @default(false)
  effectiveAt DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  updatedBy   String?
  
  @@index([type])
  @@index([published])
  @@index([effectiveAt])
  @@map("legal_documents")
}

// === СОГЛАСИЯ НА ОБРАБОТКУ ПЕРСОНАЛЬНЫХ ДАННЫХ (152-ФЗ РФ) ===
model UserConsent {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  consentType  String   // 'privacy', 'terms', 'cookies', 'marketing', 'data_processing'
  version      String   // Версия юр. документа
  accepted     Boolean  @default(true)
  ipAddress    String?
  userAgent    String?  @db.Text
  acceptedAt   DateTime @default(now())
  revokedAt    DateTime? // Дата отзыва согласия
  
  @@index([userId])
  @@index([consentType])
  @@index([acceptedAt])
  @@map("user_consents")
}

// === ТОКЕНЫ И СЕССИИ ===
model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  type      String   // 'password_reset', '2fa', 'email_verification'
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@map("sessions")
}

// === ЛОГИРОВАНИЕ АКТИВНОСТИ (аудит всех действий) ===
model ActivityLog {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  action    String   // 'LOGIN', 'CREATE_ITEM', 'UPDATE_ITEM', 'DELETE_ITEM', etc
  entity    String   // 'User', 'Item', 'Guide', etc
  entityId  String?
  ipAddress String?
  userAgent String?  @db.Text
  changes   Json?    // Детальные изменения
  metadata  Json?    // Дополнительная информация
  severity  String   @default("info") // 'info', 'warning', 'error', 'critical'
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([action])
  @@index([entity])
  @@index([createdAt])
  @@index([severity])
  @@map("activity_logs")
}

// === СЕССИИ ПОЛЬЗОВАТЕЛЕЙ (активные сессии) ===
model UserSession {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  ipAddress String
  userAgent String   @db.Text
  expiresAt DateTime
  createdAt DateTime @default(now())
  lastUsed  DateTime @updatedAt
  
  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@map("user_sessions")
}

// === УВЕДОМЛЕНИЯ ===
model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String   // 'comment_reply', 'guide_like', 'system', 'update'
  title     String
  content   String   @db.Text
  link      String?
  read      Boolean  @default(false)
  readAt    DateTime?
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([read])
  @@index([createdAt])
  @@map("notifications")
}
