generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// === ПОЛЬЗОВАТЕЛИ ===
model User {
  id            String    @id @default(cuid())
  username      String    @unique
  email         String    @unique
  password      String
  avatar        String?
  bio           String?
  discordId     String?   @unique
  isPremium     Boolean   @default(false)
  premiumUntil  DateTime?
  createdAt     DateTime  @default(now())
  roleId        String?
  role          Role?     @relation(fields: [roleId], references: [id])
  guides        Guide[]
  comments      Comment[]
}

model Role {
  id          String  @id @default(cuid())
  name        String  @unique
  displayName String
  description String?
  users       User[]
}

// === ПРЕДМЕТЫ ===
model Item {
  id                 String            @id @default(cuid())
  name               String            @unique
  nameEn             String?
  description        String
  descriptionEn      String?
  image              String?
  type               String
  rarity             String
  price              Int               @default(0)          // КРЕДИТЫ (основная валюта для покупки предметов)
  crystalPrice       Int               @default(0)          // КРИСТАЛЛЫ АКТИВНОЙ МАТЕРИИ (редкие предметы)
  replicationPoints  Int               @default(0)
  monolithLevel      String?
  weight             Float             @default(0)
  stackable          Boolean           @default(false)
  maxStack           Int               @default(1)
  source             String[]
  sourceEn           String[]
  tags               String[]
  isQuestItem        Boolean           @default(false)
  damage             Int               @default(0)
  armor              Int               @default(0)
  durability         Int               @default(0)
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  monolithUnlocks    MonolithUnlock[]
}

// === МОНОЛИТ ===
model MonolithLevel {
  id                 String           @id @default(cuid())
  code               String           @unique
  order              Int              @unique
  name               String
  nameEn             String?
  requiredTokens     Int?             // ЖЕТОНЫ МОНОЛИТА (для открытия уровня)
  requiredCrystals   Int?             // КРИСТАЛЛЫ АКТИВНОЙ МАТЕРИИ (доп. требование для открытия уровня)
  unlocks            MonolithUnlock[]
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
}

model MonolithUnlock {
  id              String         @id @default(cuid())
  monolithLevelId String
  monolithLevel   MonolithLevel  @relation(fields: [monolithLevelId], references: [id], onDelete: Cascade)
  type            String         // item, upgrade, recipe, chrono
  itemId          String?
  item            Item?          @relation(fields: [itemId], references: [id], onDelete: Cascade)
  upgradeName     String?
  upgradeNameEn   String?
  upgradeCost     Int?           // КРЕДИТЫ (стоимость улучшения)
  recipeName      String?
  recipeNameEn    String?
  chronoName      String?
  chronoNameEn    String?
  isLocked        Boolean        @default(false)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

// === ЛОКАЦИИ ===
model Location {
  id          String   @id @default(cuid())
  name        String   @unique
  nameEn      String?
  description String
  image       String?
  dangerLevel String
  lootTable   String[]
  tips        String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// === ГАЙДЫ ===
model Guide {
  id          String    @id @default(cuid())
  title       String
  titleEn     String?
  slug        String    @unique
  content     String
  contentEn   String?
  tags        String[]
  authorId    String
  author      User      @relation(fields: [authorId], references: [id])
  published   Boolean   @default(false)
  views       Int       @default(0)
  rating      Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  comments    Comment[]
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  guideId   String
  guide     Guide    @relation(fields: [guideId], references: [id], onDelete: Cascade)
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  rating    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// === НОВОСТИ/ПАТЧИ ===
model Patch {
  id          String   @id @default(cuid())
  version     String   @unique
  title       String
  titleEn     String?
  content     String
  contentEn   String?
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// === НАСТРОЙКИ ===
model SiteSettings {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String
  description String?
  updatedAt   DateTime @updatedAt
  updatedBy   String?
}

// === АУДИТ ===
model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  action    String
  entity    String
  entityId  String
  changes   Json?
  createdAt DateTime @default(now())
}
