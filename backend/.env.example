# ===== БАЗА ДАННЫХ =====
DATABASE_URL="postgresql://activematter:SecurePass123!@#@localhost:5432/active_matter_wiki"

# ===== JWT КЛЮЧ (ОБЯЗАТЕЛНО МЕНАЙТЕ!) =====
JWT_SECRET="your-super-secure-jwt-key-min-32-characters-please-change-this"
JWT_EXPIRY="7d"

# ===== ШИФРОВАНИЕ (генерируется автоматически если пусто) =====
# Генерировать: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY="your-256-bit-hex-encoded-encryption-key-minimum-64-chars"

# ===== СЕРВЕР =====
PORT=3001
NODE_ENV=development
CLIENT_URL="http://localhost:5173"

# ===== НЕбесная сертификация (ОПЦИОНАЛО) =====
# DISCORD_CLIENT_ID=
# DISCORD_CLIENT_SECRET=
# DISCORD_REDIRECT_URI=http://localhost:3001/api/v1/discord/callback

# ===== ЛОГИ =====
LOG_LEVEL=info
LOG_FILE="./logs/app.log"

# ===== CORS (ХОсты для VDS) =====
# Для разработки:
CORS_ORIGINS="http://localhost:5173,http://localhost:3000"
# Для продакшн:
CORS_ORIGINS="https://activematter-wiki.com,https://www.activematter-wiki.com"

# ===== РАтЕ-Лимит (защита от DDoS) =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== Сессии =====
SESSION_TIMEOUT_MS=3600000
REFRESH_TOKEN_EXPIRY="30d"
